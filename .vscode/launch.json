    "version": "0.2.0",
    "configurations": [
        {
            "terminal.integrated.shell.windows": "cmd.exe",
            "terminal.integrated.shellArgs.windows": ["-NoExit", "/c", "chcp.com 65001"],
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'vinlag-chess'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=vinlag-chess",
                    "--package=vinlag-chess"
                ],
                "filter": {
                    "name": "vinlag-chess",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
